[Unit]
Description=Spark Slave
Requires=network.target
After=network.target
[Service]
Type=forking
ExecStart=/opt/spark/sbin/start-slave.sh {{ spark_master_url }}
ExecStop=/opt/spark/sbin/stop-slave.sh
User=root
PIDFile=/var/run/spark-root-org.apache.spark.deploy.worker.Worker-1.pid
Environment="SPARK_PID_DIR=/var/run SPARK_EXECUTOR_MEMORY=4G"
[Install]
WantedBy=multi-user.target
